---
import Layout from "../../layouts/Layout.astro";
import { AdminSignalsClient } from "../../components/admin/AdminSignalsClient";
---

<Layout title="Sygnały – panel admina">
  <main class="max-w-5xl mx-auto px-4 py-8 space-y-6">
    <header class="space-y-2">
      <div class="flex items-center gap-3">
        <a
          href="/"
          class="inline-flex items-center gap-1.5 rounded-md border border-slate-300 bg-white px-3 py-1.5 text-sm font-medium text-slate-700 shadow-xs transition-colors hover:bg-slate-50"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="m12 19-7-7 7-7"></path>
            <path d="M19 12H5"></path>
          </svg>
          Powrót do dashboardu
        </a>
      </div>
      <h1 class="text-3xl font-semibold text-slate-900">Sygnały – panel admina</h1>
      <p class="text-sm text-slate-600">
        Generuj kandydatów sygnałów (baseline + news) i akceptuj / odrzucaj je przed udostępnieniem użytkownikom.
      </p>
    </header>
    <AdminSignalsClient client:load />
  </main>
</Layout>
